@inherits LayoutComponentBase

<div class="sidebar bg-light d-flex flex-column vh-100 shadow-sm" style="font-size:1.2rem ; ">
    <div class="sidebar-header text-center py-3 border-bottom">
        <img src="images/logo.png" alt="Logo" class="img-fluid" style="height: 50px;" />
    </div>
    <ul class="nav flex-column mt-3 bg-dark">
        <li class="nav-item mt-2" >
            <NavLink class="nav-link d-flex align-items-center text-white py-3 px-3" href="/dashboard" Match="NavLinkMatch.All">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
            </NavLink>
        </li>
        <li class="nav-item mt-2" >
            <NavLink class="nav-link d-flex align-items-center text-Dark py-3 px-3" href="/create-event">
                <i class="fas fa-calendar-plus me-2"></i> Create Event
            </NavLink>
        </li>
        <li class="nav-item mt-2" >
            <NavLink class="nav-link d-flex align-items-center text-Dark py-3 px-3" href="/manage-events">
                <i class="fas fa-calendar-check me-2"></i> Manage Events
            </NavLink>
        </li>
        <li class="nav-item mt-2" >
            <NavLink class="nav-link d-flex align-items-center text-Dark py-3 px-3" href="/manage-users">
                <i class="fas fa-users-cog me-2"></i> Manage Users
            </NavLink>
        </li>
        <li class="nav-item mt-2">
            <NavLink class="nav-link d-flex align-items-center text-Dark py-3 px-3" href="/Invoice">
                <i class="fas fa-users-cog me-2"></i> Invoice
            </NavLink>
        </li>
    </ul>
</div>

<div class="content p-4">
    @Body
</div>

<!-- Additional Styles -->
<style>
    /* Hover and Active State for Nav Links */
    .nav-link:hover, .nav-link.active {
        background-color: darkcyan;
        color: #ffffff !important;
        border-radius: 10px; /* Matches the li border-radius */
    }

    /* Sidebar Styles */
    .sidebar {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        overflow-y: auto;
        z-index: 1029;
    }

    /* Content Area */
    .content {
        margin-left: 260px;
    }
</style>
